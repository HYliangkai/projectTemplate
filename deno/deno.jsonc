{
  "tasks": {
    "dev": "deno run -A --unstable main.ts",
    "watch": "deno run -A --unstable --watch main.ts"
  },
  "fmt": {
    "options": {
      "semiColons": false, //末尾不加分号
      "singleQuote": true, //使用单引号替代双引号
      "indentWidth": 2 //间距为2
    }
  },
  //配置语法校验规则
  "lint": {
    "files": {
      "include": [
        "src/"
      ]
    }
  },
  //依赖导入处理,可以实现本地程序或外部链接的导入映射(原生层面)
  "imports": {
    "@/": "./src/",
    "lib": "./lib/mod.ts"
  }
}